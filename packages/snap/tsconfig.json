{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom", "ES2017"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "target": "ES2017",
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "./@types",
      "../types",
      "src/types"
    ]
  },
  "files": ["./node_modules/@metamask/snap-types/global.d.ts"],
  "include": ["src/**/*.ts", "test/**/*ts"]
}
